---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BLOG_CONFIG } from '../config/current-config';

const termsContent = BLOG_CONFIG.legalPages?.terms;
const title = termsContent?.title || 'Terms of Service';
const lastUpdated = termsContent?.lastUpdated || new Date().toLocaleDateString();
const sections = termsContent?.sections || [];
---

<BaseLayout title={title} description={`${BLOG_CONFIG.site.name} - ${title}`}>
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <header class="mb-12 text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">{title}</h1>
      <p class="text-gray-600 dark:text-gray-400">
        Last Updated: {lastUpdated}
      </p>
    </header>

    {sections.length > 0 ? (
      <div class="prose dark:prose-invert prose-lg max-w-none">
        {sections.map((section) => (
          <section class="mb-8">
            <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-200 mb-4">{section.title}</h2>
            <p class="text-gray-700 dark:text-gray-300">{section.content}</p>
          </section>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-600 dark:text-gray-400">Terms of service content is not configured. Please update your site configuration.</p>
      </div>
    )}
  </div>
</BaseLayout>
