---
/**
 * RelatedPosts component
 * Displays a list of posts related to the current post
 */

import type { BlogPost } from '../../types/content';
import PostCard from '../ui/PostCard.astro';
// FormattedDate and ResponsiveImage are now used within PostCard

interface Props {
  posts: BlogPost[];
  title?: string;
}

const { 
  posts, 
  title = 'Related Articles' 
} = Astro.props as Props;
---

{posts.length > 0 && (
  <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
    <h2 class="text-2xl font-bold mb-8 text-center md:text-left">{title}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {posts.map(post => (
        <div class="not-prose h-full">
          <PostCard post={post} />
        </div>
      ))}
    </div>
  </div>
)}
