---
// Import configuration
import { BLOG_CONFIG } from '../../config/current-config';

// Get UpstoxCTA config
const config = BLOG_CONFIG.upstoxCTA;
---

{config?.enabled && 
<div class="upstox-cta-container my-10 overflow-hidden relative">
  <div class="upstox-card relative backdrop-blur-sm border border-gray-100 dark:border-gray-800 rounded-xl overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute -top-24 -right-24 w-48 h-48 bg-gradient-to-br from-blue-400/30 to-purple-500/30 rounded-full blur-2xl"></div>
    <div class="absolute -bottom-24 -left-24 w-48 h-48 bg-gradient-to-tr from-emerald-400/20 to-cyan-500/20 rounded-full blur-2xl"></div>
    
    <!-- Content container with glass effect -->
    <div class="relative p-8 backdrop-blur-sm">
      <!-- Header row with logo and text -->
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center bg-white/90 shadow-sm backdrop-blur p-2 border border-gray-100">
            <img
              src={config.logo.src}
              alt={config.logo.alt}
              class="w-full h-full object-contain"
              loading="lazy"
              decoding="async"
            />
          </div>
          <div class="text-left">
            <h2 class="text-2xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400">{config.title}</h2>
          </div>
        </div>
        
        {config.badge?.showBadge && 
        <div class="hidden md:block">
          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-blue-50 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300 border border-blue-100 dark:border-blue-800">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5 2a1 1 0 011 1v1h1a1 1 0 010 2H6v1a1 1 0 01-2 0V6H3a1 1 0 010-2h1V3a1 1 0 011-1zm0 10a1 1 0 011 1v1h1a1 1 0 110 2H6v1a1 1 0 11-2 0v-1H3a1 1 0 110-2h1v-1a1 1 0 011-1zM12 2a1 1 0 01.967.744L14.146 7.2 17.5 9.134a1 1 0 010 1.732l-3.354 1.935-1.18 4.455a1 1 0 01-1.933 0L9.854 12.8 6.5 10.866a1 1 0 010-1.732l3.354-1.935 1.18-4.455A1 1 0 0112 2z" clip-rule="evenodd" />
            </svg>
            {config.badge.text}
          </span>
        </div>
        }
      </div>
      
      <!-- Main content -->
      <div class="grid md:grid-cols-5 gap-6">
        <div class="md:col-span-3">
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-6">
            {config.description}
          </p>
          
          <!-- Features list -->
          <div class="grid grid-cols-2 gap-3 mb-6">
            {config.features.map((feature) => (
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                <span class="text-sm text-gray-600 dark:text-gray-400">{feature}</span>
              </div>
            ))}
          </div>
        </div>
        
        <div class="md:col-span-2 flex items-center justify-center">
          <div class="w-full bg-white/80 dark:bg-slate-800/80 p-6 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 backdrop-blur-sm">
            <h3 class="text-lg font-semibold mb-4 text-center text-gray-800 dark:text-gray-200">{config.ctaSection.title}</h3>
            <a
              href={config.ctaSection.buttonUrl} 
              target="_blank"
              rel="noopener noreferrer"
              class="w-full inline-block text-center bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-medium py-3 px-6 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-1 active:translate-y-0"
            >
              {config.ctaSection.buttonText}
            </a>
            {config.ctaSection.disclaimer && 
            <p class="text-xs text-gray-500 dark:text-gray-500 mt-6">
              {config.ctaSection.disclaimer}
            </p>
            }

          </div>
        </div>
      </div>
    </div>
    <p class="text-xs text-gray-500 dark:text-gray-500 mt-6 italic text-center">
      Investments in the securities market are subject to market risks, read all the related documents carefully before investing.
    </p>
  </div>
</div>
